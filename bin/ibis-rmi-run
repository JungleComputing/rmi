#!/bin/sh

#ibis-rmi-run script.
#This script is a convenience script to run Ibis RMI applications.

# Check setting of RMI_HOME
if [ -z "$RMI_HOME" ];  then
    echo "please set RMI_HOME to the location of your Ibis RMI installation" 1>&2
    exit 1
fi

# Jar-files from library.
LIBCLASSPATH=""
add_to_libclasspath () {
    JARFILES=`cd "$1" && ls *.jar 2>/dev/null`
    for i in ${JARFILES} ; do
	if [ -z "$LIBCLASSPATH" ] ; then
	    LIBCLASSPATH="$1/$i"
	else
	    LIBCLASSPATH="$LIBCLASSPATH:$1/$i"
	fi
    done
}

# Add the jar files in the Ibis lib dir to the classpath.
add_to_libclasspath "${RMI_HOME}"/lib

# and lib ...
add_to_libclasspath lib

# And finally, run ...
java -classpath "$CLASSPATH:$LIBCLASSPATH" -Dlog4j.configuration=file:$RMI_HOME/log4j.properties "$@"
